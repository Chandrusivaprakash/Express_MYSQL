<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
</head>
<body>
    <div class="Table">
        <h1><a href="/adduser">Add User</a></h1>
        
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>City</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{!-- each is loop --}}
                {{#each rows}}
                <tr>
                    <td>{{this.ID}}</td>
                    <td>{{this.NAME}}</td>
                    <td>{{this.AGE}}</td>
                    <td>{{this.CITY}}</td>
                    <td class="action-links">
                        <a href="/edituser/{{this.ID}}">Edit</a>
                    </td>
                    <td class="action-links">
                        <a href="/deleteuser/{{this.ID}}">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>
